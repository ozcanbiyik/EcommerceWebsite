@model ozcan.MvcWebUI.Models.Register

@{
    ViewBag.Title = "title";
}

<div class="container pb-5">

    <h2>Yeni Kullanıcı</h2>
    <hr />

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

